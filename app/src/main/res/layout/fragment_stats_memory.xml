<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".activities.MemoryStatsFragment">

    <TextView
        android:id="@+id/medium_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/accuracy"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/medium_average_time"
        app:layout_constraintStart_toStartOf="@+id/medium_average_time"
        app:layout_constraintTop_toBottomOf="@+id/medium_average_time" />

    <TextView
        android:id="@+id/difficult_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/roboto"
        android:text="@string/accuracy"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/difficult_average_time"
        app:layout_constraintStart_toStartOf="@+id/difficult_average_time"
        app:layout_constraintTop_toBottomOf="@+id/difficult_average_time" />

    <TextView
        android:id="@+id/difficult_games_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/games_played"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/difficult_high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/high_score_stats"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/difficult_games_played"
        app:layout_constraintStart_toStartOf="@+id/difficult_games_played"
        app:layout_constraintTop_toBottomOf="@+id/difficult_games_played" />

    <TextView
        android:id="@+id/difficult_average_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/average_time"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/difficult_high_score"
        app:layout_constraintStart_toStartOf="@+id/difficult_high_score"
        app:layout_constraintTop_toBottomOf="@+id/difficult_high_score" />

    <TextView
        android:id="@+id/medium_high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/high_score_stats"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/medium_games_played"
        app:layout_constraintStart_toStartOf="@+id/medium_games_played"
        app:layout_constraintTop_toBottomOf="@+id/medium_games_played" />

    <TextView
        android:id="@+id/medium_average_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/average_time"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/medium_high_score"
        app:layout_constraintStart_toStartOf="@+id/medium_high_score"
        app:layout_constraintTop_toBottomOf="@+id/medium_high_score" />

    <TextView
        android:id="@+id/medium_games_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/games_played"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto"
        android:text="Total Focus Points"
        android:textColor="@color/color5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/points"
        android:layout_width="8dp"
        android:layout_height="27dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/memory"
        android:textColor="#5B3C3C"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Easy"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Medium"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easy_accuracy" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="72dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Difficult"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medium_accuracy" />

    <TextView
        android:id="@+id/easy_games_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/games_played"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/easy_high_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/high_score_stats"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/easy_games_played"
        app:layout_constraintStart_toStartOf="@+id/easy_games_played"
        app:layout_constraintTop_toBottomOf="@+id/easy_games_played" />

    <TextView
        android:id="@+id/easy_average_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/average_time"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/easy_high_score"
        app:layout_constraintStart_toStartOf="@+id/easy_high_score"
        app:layout_constraintTop_toBottomOf="@+id/easy_high_score" />

    <TextView
        android:id="@+id/easy_accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/accuracy"
        android:textColor="#5B3C3C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/easy_average_time"
        app:layout_constraintStart_toStartOf="@+id/easy_average_time"
        app:layout_constraintTop_toBottomOf="@+id/easy_average_time" />

</androidx.constraintlayout.widget.ConstraintLayout>