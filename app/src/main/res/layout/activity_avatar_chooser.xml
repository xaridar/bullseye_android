<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".activities.AvatarChooserActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/defaultAva"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="12dp"
            android:background="#00FFFFFF"
            android:contentDescription="default"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pfp_default" />

        <ImageButton
            android:id="@+id/archerAva"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:background="#00FFFFFF"
            android:contentDescription="archer"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pfp_archer" />

        <ImageButton
            android:id="@+id/boyAva"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="12dp"
            android:background="#00FFFFFF"
            android:contentDescription="boy"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pfp_boy" />

        <ImageButton
            android:id="@+id/girlAva"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:background="#00FFFFFF"
            android:contentDescription="girl"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pfp_girl" />

        <ImageButton
            android:id="@+id/logoAva"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="12dp"
            android:background="#00FFFFFF"
            android:contentDescription="logo"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pfp_logo" />

        <ImageButton
            android:id="@+id/logo_altAva"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:background="#00FFFFFF"
            android:contentDescription="logo_alt"
            android:padding="2dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/pfp_logo_alt" />
    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToUserSignUp"
        android:layout_width="194dp"
        android:layout_height="63dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/color4"
        android:text="@string/confirm"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/color5" />
</androidx.constraintlayout.widget.ConstraintLayout>