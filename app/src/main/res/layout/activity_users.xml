<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".activities.UsersActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/adminSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pfp1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@android:color/transparent"
                android:contentDescription="1"
                android:scaleType="fitCenter"
                android:src="@drawable/pfp_archer"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Chuck"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/pfp1"
                app:layout_constraintStart_toStartOf="@+id/pfp1"
                app:layout_constraintTop_toBottomOf="@+id/pfp1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pfp2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@android:color/transparent"
                android:contentDescription="2"
                android:scaleType="fitCenter"
                android:src="@drawable/pfp_default"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Chris"
                app:layout_constraintEnd_toEndOf="@+id/pfp2"
                app:layout_constraintStart_toStartOf="@+id/pfp2"
                app:layout_constraintTop_toBottomOf="@+id/pfp2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pfp3"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@android:color/transparent"
                android:contentDescription="3"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/adminSignIn"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pfp_boy" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Jeffy"
                app:layout_constraintEnd_toEndOf="@+id/pfp3"
                app:layout_constraintStart_toStartOf="@+id/pfp3"
                app:layout_constraintTop_toBottomOf="@+id/pfp3" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/pfp4"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@android:color/transparent"
                android:contentDescription="4"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/adminSignIn"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/pfp_girl" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Beverly"
                app:layout_constraintEnd_toEndOf="@+id/pfp4"
                app:layout_constraintStart_toStartOf="@+id/pfp4"
                app:layout_constraintTop_toBottomOf="@+id/pfp4" />
        </LinearLayout>
    </GridLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/adminSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/admin_sign_in"
        app:layout_constraintBottom_toTopOf="@+id/addUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/color5" />

    <ImageButton
        android:id="@+id/addUser"
        android:layout_width="143dp"
        android:layout_height="137dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="2"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_plus"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

