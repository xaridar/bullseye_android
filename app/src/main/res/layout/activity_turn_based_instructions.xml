<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instructions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tbBackground"
    tools:context=".games.turn_based.TurnBasedInstructions" >

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/amaranth"
        android:text=" How to Play"
        android:textColor="@color/tbText"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/instructions1" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amaranth"
        android:text="Strategy Game"
        android:textColor="@color/tbText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instructions1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="223dp"
            android:layout_height="132dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="These are your units. Click on them, then click on a tile to move it. They can only move one tile per turn!"
            android:textColor="@color/tbText"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/enemyPatrol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/enemyPatrol"
            android:layout_width="297dp"
            android:layout_height="69dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/enemy_patrol"
            app:layout_constraintBottom_toTopOf="@+id/textView25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/playerMovement"
            android:layout_width="62dp"
            android:layout_height="220dp"
            android:layout_marginTop="190dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/player_moving"
            app:layout_constraintBottom_toTopOf="@+id/enemyPatrol"
            app:layout_constraintEnd_toStartOf="@+id/textView24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="300dp"
            android:layout_height="126dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="This the enemy! As you can see, it patrols between points, pausing at each one. Press anywhere to continue to know how to capture them!"
            android:textColor="@color/tbText"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instructions2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="invisible">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/enemyCapture"
            android:layout_width="81dp"
            android:layout_height="232dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/enemy_captured"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="225dp"
            android:layout_height="124dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Enemies are captured by moving a unit onto the same space as an enemy. Capture all enemies to win!"
            android:textColor="@color/tbText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/enemyCapture"
            app:layout_constraintTop_toTopOf="parent" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/playerCapture"
            android:layout_width="142dp"
            android:layout_height="110dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/player_captured"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enemyCapture" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="130dp"
            android:layout_height="122dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Watch out! Enemies can capture your units if you aren't careful!"
            android:textColor="@color/tbText"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/playerCapture"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>