<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialThemeWithActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MaterialFullScreen" parent="MaterialThemeNoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Game" parent="MaterialFullScreen">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="MemoryGame" parent="Game">
        <item name="android:navigationBarColor">@color/memCardColor1</item>
    </style>

    <style name="MemoryInstructions" parent="Game">
        <item name="android:navigationBarColor">@color/memBackground</item>
    </style>

    <style name="SortingGame" parent="Game">
        <item name="android:navigationBarColor">@color/sortingBackground</item>
    </style>

    <style name="TurnBasedGame" parent="Game">
        <item name="android:navigationBarColor">@color/tbBackground</item>
    </style>

    <style name="Transition" parent="MaterialFullScreen">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="DrawerActivity" parent="MaterialThemeNoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>

    <style name="SignInText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color4</item>
        <item name="android:backgroundTint">@color/color4</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>

    <style name="UsernameStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/color4</item>
    </style>

    <style name="MoreUsersStyle" parent="UsernameStyle">
        <item name="android:textStyle">bold</item>
    </style>

</resources>